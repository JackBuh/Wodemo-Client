<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="@drawable/tpi_background"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_margin="10dp"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:textSize="28sp"
			android:text="多文件上传"
			android:textColor="#FCFCFC"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
			android:layout_margin="10dp"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_margin="10dp">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:src="@drawable/back"
				android:background="@drawable/back"
				android:id="@+id/upload_back"/>

		</LinearLayout>

	</RelativeLayout>

	<ListView
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:id="@+id/list_upload_file"
		android:layout_weight="1.0">

	</ListView>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1.0"
			android:background="#FFFFFF"
			android:layout_margin="10dp">

			<Button
				android:layout_height="40dp"
				android:text="添加…"
				android:layout_width="match_parent"
				android:id="@+id/bn_add2"
				android:background="@drawable/metro_button"
				android:layout_margin="3dp"
				android:textColor="#FFFFFF"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1.0"
			android:background="#FFFFFF"
			android:layout_margin="10dp">

			<Button
				android:layout_height="40dp"
				android:text="清空"
				android:layout_width="match_parent"
				android:id="@+id/bn_clear2"
				android:background="@drawable/metro_button"
				android:layout_margin="3dp"
				android:textColor="#FFFFFF"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_margin="10dp"
		android:background="#FFFFFF"
		android:layout_marginBottom="10dp">

		<Button
			android:layout_height="40dp"
			android:text="上传"
			android:layout_width="match_parent"
			android:id="@+id/bn_upload"
			android:background="@drawable/metro_button"
			android:textColor="#FFFFFF"
			android:layout_margin="3dp"/>

	</LinearLayout>

</LinearLayout>

